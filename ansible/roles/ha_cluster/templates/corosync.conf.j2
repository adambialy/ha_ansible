totem {
  version: 2
  cluster_name: twonodes
  transport: udpu
  interface {
    ringnumber: 0
    broadcast: yes
    mcastport: 5405
  }
}

quorum {
  provider: corosync_votequorum
  two_node: 1
}

nodelist {

{% for host in groups['all'] %}
 		node {
                        ring0_addr: {{ hostvars[host]['ansible_host'] }}
                        name: {{ host }}
 			nodeid: {{ loop.index }}

		}
 {% endfor %}

}

logging {
  to_logfile: yes
  logfile: /var/log/corosync/corosync.log
  to_syslog: yes
  timestamp: on
}


